<div class="container">
   <div class="row">
     <h3 class="text-center">Fale conosco</h3> 
     <div class="col-md-4 col-sm-6 col-sm-offset-3 col-md-offset-4">
       <div class="well">
          <%= form_for "/contacts" do |f| %>
          <div class="form-group">
             <%= f.label :nome %>
             <%= f.text_field :nome, class:'form-control' %>
          </div>
         
          <div class="form-group">
             <%= f.label :email %>
             <%= f.text_field :email, class:'form-control' %>
          </div>
         
          <div class="form-group">
             <%= f.label :commentarios %>
             <%= f.text_area :comentarios, class:'form-control' %> 
          </div>
         
           <%= f.submit 'Enviar', class:'btn btn-primary' %>
           <% end %> 
       </div>
     </div> 
   </div>
 </div>